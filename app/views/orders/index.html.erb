<div class="row  d-flex justify-content-around">
  <% @orders.each do |order| %>
    <div class="border border-white col-sm-3">
      <h1>
        Order # <%= order.id %>:
        <%= link_to order.product.name, order %>
      </h1>
      <p><%= order.product.description %></p>
      <strong>$ <%= order.product.price %></strong>
    </div><!-- /col -->
  <% end %>
</div>
