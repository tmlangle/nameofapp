<% if signed_in? %>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
<div class="form-group">
    <p>
      <%= f.label :body, "Comments" %><br>
      <%= f.text_area :body %>
    </p>
</div>

    <p>
      <div class="rating"></div>
    </p>

<div class="actions">
    <p>
      <%= f.submit "Submit", class:"btn btn-primary" %>
    </p>
</div>
  <% end %>
<% end %>
